@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Games";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<table class="table table-striped table-hover">
    <tr>
        <th>Title</th>
        <th>Console</th>
        <th>Company</th>
        <th>Rating</th>
    </tr>

    @foreach (var g in Model.games)
    {
        <tr>
            <td>@g.title</td>
            <td>@g.console.name</td>
            <td>@g.company</td>
            <td>@g.rating</td>
        </tr>
    }
</table>